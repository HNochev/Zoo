@using Zoo.Core.Models.News
@model NewsDeleteModel

@{
    ViewData["Title"] = "Изтриване на новина";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card card-danger">
            <div class="card-header">
                <h3 class="card-title">Сигурен ли сте, че искате да изтриете новина със заглавие:</h3>
            </div>
            <form method="post">
                <div class="card-body">
                    <div class="form-group text-center">
                        <h3 class="text-center" asp-for="Title">@Model.Title</h3><br>
                        <b class="text-center" asp-for="Date">От дата: @Model.Date.ToString("D")</b><br>
                        <img class="img-fluid" src="@Model.ImgUrl" alt="Снимка">
                    </div>
                </div>
                <div class="card-body">
                    <a asp-controller="News" asp-action="All" class="btn btn-secondary">Отказ</a>
                    <button type="submit" class="btn btn-danger float-right">Изтрий</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}