@using Zoo.Core.Models.Tickets
@model TicketAddFormModel

@{
    ViewData["Title"] = "Добави билет";
}

<div class="row">
    <div class="col-md-10 offset-md-1">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Добавяне на билет за посещение на зоогическата градина</h3>
            </div>
            <form enctype="multipart/form-data" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="Type"></label>
                        <textarea asp-for="Type" class="form-control" rows="2" placeholder="Добавете име и кратко описание на вида билет, който добавяте"></textarea>
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6 offset-md-3">
                        <label asp-for="Price"></label>
                        <input asp-for="Price" class="form-control" placeholder="Цена">
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-body">
                    <a asp-controller="Tickets" asp-action="All" class="btn btn-secondary">Отказ</a>
                    <input asp-page-handler="Upload" class="btn btn-primary float-right" type="submit" value="Добави">
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
<partial name="_ValidationScriptsPartial" />
}